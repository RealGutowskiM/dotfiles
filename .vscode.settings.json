{
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderIndentGuides": false,
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.folding": false,
    "editor.occurrencesHighlight": false,
    "editor.fontFamily": "'M+ 1m', Consolas, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true
    },
    "explorer.openEditors.visible": 0,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.settings.editor": "json",
    "workbench.activityBar.visible": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.startupEditor": "none",
    "workbench.list.keyboardNavigation": "simple",
    "window.menuBarVisibility": "toggle",
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "nightswitch.sunrise": "06:00",
    "nightswitch.sunset": "18:00",
    "nightswitch.themeDay": "oolory",
    "nightswitch.themeNight": "oolory night",
    "scrolloff.scrolloff": 10,
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.changeWordIncludesWhitespace": true,
    "vim.easymotionMarkerHeight": 18,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<space>"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        }
    ],
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "terminal.integrated.shellArgs.windows": ["/k", "%userprofile%\\cmdrc.bat"],
    "workbench.colorTheme": "oolory",
    "javascript.updateImportsOnFileMove.enabled": "never"
}
